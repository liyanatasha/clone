            justify-content: space-between;
            gap: 40px;
            width: 100%;
            flex-wrap: wrap;
        }
        
        /* Responsive Styles */
        @media (min-width: 1200px) {
            .trainers-container {
                flex-wrap: nowrap;
                justify-content: space-between;
            }
            
            .trainers-container .about-box {
                flex: 0 0 auto;
                width: calc((100% - 80px) / 3);
            }
        }
        
        @media (max-width: 1199px) and (min-width: 769px) {
            .trainers-container {
                justify-content: center;
            }
            
            .trainers-container .about-box:nth-child(3) {
                margin-top: 40px;
            }
            
            .trainers-container {
                max-width: 840px;
                margin: 0 auto;
            }
        }
        
        @media (max-width: 768px) {
            * {
                max-width: 100%;
                box-sizing: border-box;
            }
            
            .about-section {
                padding: 100px 0 150px;
            }
            
