            }
            
            .services-intro p {
                font-size: 1rem;
            }
    
            .services-container {
                margin-top: -50px;
            }
    
            .service-card {
                width: 100%;
            }
    
            .modal {
                width: 90%;
                margin: 20px;
            }
        }
        
