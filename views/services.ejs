    <style>
        /* Services-specific styles */
        .main-content {
            padding-top: 100px;
            color: #643c94;
        }
        
        .services-hero {
            background-color: #643c94;
            clip-path: polygon(0 0, 0 85%, 100% 95%, 100% 0);
            padding: 120px 0 200px;
            color: white;
        }
    
        .services-intro {
            max-width: 800px;
            margin: 0 auto;
            text-align: center;
            padding: 0 20px;
            position: relative;
            z-index: 2;
        }
    
        .services-intro h1 {
            font-size: 2.5rem;
            margin-bottom: 20px;
        }
    
        .services-intro p {
            font-size: 1.2rem;
            line-height: 1.6;
        }
    
        .services-container {
            max-width: 1200px;
            margin: -100px auto 50px;
            padding: 0 20px;
            position: relative;
            z-index: 2;
            display: flex;
            gap: 30px;
            flex-wrap: wrap;
            justify-content: center;
        }
    
        .service-card {
            flex: 1;
            min-width: 300px;
            max-width: 500px;
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            border: 3px solid #f3eb2e;
            transition: transform 0.3s ease;
        }
    
        .service-card:hover {
            transform: translateY(-10px);
        }
    
        .service-image {
            height: 200px;
            overflow: hidden;
            position: relative;
        }
    
        .service-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    
        .service-content {
            padding: 30px;
            color: #643c94;
        }
    
        .service-content h2 {
            font-size: 1.8rem;
            margin-bottom: 15px;
            color: #643c94;
        }
    
        .service-content p {
            margin-bottom: 20px;
            line-height: 1.6;
            color: #666;
        }
    
        .service-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }
    
        .service-list li {
            margin: 10px 0;
            padding-left: 25px;
            position: relative;
            color: #643c94;
            cursor: pointer;
            transition: all 0.3s ease;
        }
    
        .service-list li::before {
            content: '•';
            position: absolute;
            left: 0;
            color: #f3eb2e;
            font-size: 1.5em;
            line-height: 1;
            transition: all 0.3s ease;
        }
    
        /* Add subtle hover effect without disrupting the original design */
        .service-list li:hover {
            transform: translateX(5px);
        }
    
        .service-list li:hover::before {
            transform: scale(1.2);
        }
    
        /* Modal Styles */
        .modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1000;
            justify-content: center;
            align-items: center;
        }
    
        .modal {
            display: none;
            position: relative;
            width: 50%;
            max-width: 600px;
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
            border: 3px solid #f3eb2e;
        }
    
        .modal-content {
            color: #643c94;
        }
    
        .modal-content h3 {
            font-size: 1.8rem;
            margin-bottom: 15px;
        }
    
        .modal-content p {
            color: #666;
            line-height: 1.6;
            margin-bottom: 20px;
        }
    
        .close-modal {
            position: absolute;
            top: 15px;
            right: 15px;
            font-size: 24px;
            background: none;
            border: none;
            color: #643c94;
            cursor: pointer;
            padding: 5px 10px;
            border-radius: 50%;
            transition: all 0.3s ease;
        }
    
        .close-modal:hover {
            background: #f3eb2e;
            transform: scale(1.1);
        }
    
        @media (max-width: 768px) {
            .services-hero {
                padding: 100px 0 150px;
            }
    
